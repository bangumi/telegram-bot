{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>Trim21/renovate-config",
    "local>Trim21/renovate-config:app",
    "local>Trim21/renovate-config:monthly"
  ],
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "pin",
  "pre-commit": {
    "enabled": true
  },
  "npm": {
    "enabled": true
  },
  "git-submodules": {
    "enabled": true
  },
  "semanticCommitType": "build",
  "packageRules": [
    {
      "matchPackageNames": [
        "python"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "semanticCommitType": "chore",
      "groupName": "pre-commit",
      "semanticCommitScope": ""
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "pinDigests": true,
      "rangeStrategy": "pin",
      "minor": {
        "enabled": false
      },
      "major": {
        "enabled": false
      }
    }
  ]
}
